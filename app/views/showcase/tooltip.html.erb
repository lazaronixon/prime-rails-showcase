&lt;h3&gt;Customized&lt;/h3&gt;
&lt;%= p_text_field_tag('in','Focus me!') %&gt;

&lt;%= p_tooltip('default',for: 'in',showEvent: 'focus', at: 'left bottom') do %&gt;
    &lt;%= image_tag('/resources/demo/images/galleria/galleria5.jpg') %&gt;
&lt;%  end %&gt;
</pre>
<%  end %>

<%= p_tabview('doc') %>
