<h1 class="widget-title">SlideMenu</h1>
<p>SlideMenu displays submenus in with slide animation similar to ipod menus.</p>

<h3>Default</h3>
<%= p_slide_menu('sm1') do %>

  <%= p_submenubar(label: 'File',icon: 'ui-icon-document') do %> 
    <%= p_submenubar(label: 'New',icon: 'ui-icon-contact') do %> 
      <%= p_menubar_item(showcase_contextmenu_path, value: 'Project') %>
      <%= p_menubar_item(showcase_contextmenu_path, value: 'Other') %>  
    <% end %>
    <%= p_menubar_item(showcase_contextmenu_path, value: 'Open') %>
    <%= p_menubar_item(showcase_contextmenu_path, value: 'Quit') %>
  <% end %>

  <%= p_submenubar(label: 'Edit',icon: 'ui-icon-pencil') do %> 
    <%= p_menubar_item(showcase_contextmenu_path, value: 'Undo', icon: 'ui-icon-arrowreturnthick-1-w') %>
    <%= p_menubar_item(showcase_contextmenu_path, value: 'Redo', icon: 'ui-icon-arrowreturnthick-1-e') %>  
  <% end %>

  <%= p_submenubar(label: 'Help',icon: 'ui-icon-help') do %> 
    <%= p_menubar_item(showcase_contextmenu_path, value: 'Contents') %>    
    <%= p_submenubar(label: 'Search',icon: 'ui-icon-search') do %>   
      <%= p_submenubar(label: 'Text') do %>       
        <%= p_menubar_item(showcase_contextmenu_path, value: 'Workspace') %>  
      <% end %> 
      <%= p_menubar_item(showcase_contextmenu_path, value: 'File') %>  
    <% end %>    
  <% end %>

  <%= p_submenubar(label: 'Actions',icon: 'ui-icon-gear') do %> 
    <%= p_submenubar(label: 'Ajax', icon: 'ui-icon-refresh') do %>       
      <%= p_menubar_item(showcase_contextmenu_path, value: 'Save', icon: 'ui-icon-disk') %>  
      <%= p_menubar_item(showcase_contextmenu_path, value: 'Update', icon: 'ui-icon-arrowrefresh-1-w') %>  
    <% end %> 
    <%= p_submenubar(label: 'Non-Ajax', icon: 'ui-icon-document') do %>       
      <%= p_menubar_item(showcase_contextmenu_path, value: 'Delete', icon: 'ui-icon-close') %>  
    <% end %> 
  <% end %>

  <%= p_menubar_item(showcase_contextmenu_path, value: 'Quit', icon: 'ui-icon-close') %>

<% end %>

